
## set to right directory
setwd(dir="/Users/XX/Documents/schoolwerk/MA1/Semester 2/Data and Visualisation for Business/A2T1")


## load the data
dat <- read.csv(
  file = "DataMortality.csv",
  header = TRUE,
  sep = ",",
  dec = "."
)

## load ggplot library
library(ggplot2)

## plot the data
ggplot(dat, aes(x=reorder(Country, DeathsPer100kPop), y=DeathsPer100kPop))+ labs(title = "German efficiency", subtitle = "Covid-19 deaths per 100,000 population
+ Europe, selected countries, to April 28th 2020", caption = "Sources: John Hopkins University, CSSE;PHE/NHS") + geom_col(fill="royalblue2") + coord_flip() + xlab("")+ ylab("") + theme(panel.background = element_blank(), panel.grid.major.y = element_blank(),panel.grid.major.x = element_line( size=1, color="grey"), plot.caption=element_text(hjust=0, color="grey")) + guides(x = guide_axis(position = 'top'))
